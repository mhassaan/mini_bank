<%= render '/partials/header' %>
<div class="container-fluid">
  <div class="row">
    <%= render '/partials/header' %>
    <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
      <h2>New Beneficiary</h2>
      <%=render '/partials/error_messages'%>
      <div class="container">
        <%= form_for @beneficiary,url: beneficiaries_path,method:'Post',html:{class:'form'} do |f|%>

          <div class="form-group row">
            <label for="first_name" class="col-sm-2 col-form-label">Beneficiary User:</label>
            <div class="col-sm-10">
              <%=f.select :benefactor_id, options_for_select(BeneficiaryService.new({current_user: current_user}).all_beneficiaries),{include_blank: 'Please select beneficiary.'},class:'custom-select'%>
            </div>
          </div>

          <div class="form-group row">
            <label for="first_name" class="col-sm-2 col-form-label">Beneficiary Account</label>
            <div class="col-sm-10">
              <select name="beneficiary[account_id]" class="custom-select" id= "beneficiary_account_id">
                <option>Please select account</option>
              </select>
            </div>
          </div>



          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <button type="submit" class="btn btn-primary btn-success">Create</button>
            </div>
          </div>
        <%end%>
      </div>
    </main>
  </div>
</div>
