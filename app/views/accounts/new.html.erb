<%= render '/partials/header' %>
<div class="container-fluid">
  <div class="row">
    <%= render '/partials/header' %>
    <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
      <h2>Top_Up Account</h2>
      <%=render '/partials/error_messages'%>
      <div class="container">
        <%= form_for @account,url: recharge_account_accounts_path,method:'Post',html:{class:'form'} do |f|%>

          <div class="form-group row">
            <label for="first_name" class="col-sm-2 col-form-label">Account:</label>
            <div class="col-sm-10">
              <%=f.select :id, options_for_select(@all_accounts),{include_blank: 'Please select your account.'},class:'custom-select'%>
            </div>
          </div>

          <div class="form-group row">
            <label for="first_name" class="col-sm-2 col-form-label">Amount:</label>
            <div class="col-sm-10">
              <%=f.text_field :balance, class:'form-control'%>
            </div>
          </div>



          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <button type="submit" class="btn btn-primary btn-success">Create</button>
            </div>
          </div>
        <%end%>
      </div>
    </main>
  </div>
</div>
