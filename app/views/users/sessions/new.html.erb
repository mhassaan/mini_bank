<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-7 col-xl-5">
      <div class="fdb-box fdb-touch">
        <div class="row text-center">
          <div class="col">
            <h1>Log In</h1>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row d-flex justify-content-center">
            <% if flash[:alert].present?%>
              <div class="alert alert-danger">
                <%=flash[:alert]%>
              </div>
            <%end%>
          </div>
          <div class="row mt-4">
            <div class="col">
              <%= f.email_field :email,class: 'form-control',placeholder: 'Email',autofoucs: true %>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col ">
              <%= f.password_field :password, autocomplete: "off",class:'form-control',placeholder: 'Password' %>
            </div>
          </div>
          <div class="row justify-content-start mt-4">
            <div class="col">
              <%=f.submit 'Sign In', class: 'form-control btn btn-secondary'%>
              <p class="text-right"><a href="<%=new_user_registration_path%>">Dont have an account?</a></p>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
